{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "public/icon-16.png",
    "128": "public/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "persistent": false,
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*.vtexcommercestable.com.br/*",
    "https://*.vtexcommercestable.com.br/*",
    "cookies",
    "*://*.google.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.vtexcommercestable.com.br/*",
        "https://*.vtexcommercestable.com.br/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "public/icon-19.png",
      "38": "public/icon-38.png"
    },
    "default_title": "VTEX Pretty CMS",
    "default_popup": "popup.html"
  }
}
